#!/usr/bin/env node

var command = process.argv[2];

if('--production'===process.argv[3]) {
    process.env.NODE_ENV = 'production';
} else {
    process.env.NODE_ENV = 'development';
}

switch (command) {
    case 'deploy':
        process.env.NODE_ENV = 'production';
        break;
    case 'build':
        require('../development/build')(process.cwd());
        break;
    case 'develop':
        require('../development')(process.cwd());
        break;
    default:
        console.log('Unknown command: ' + command);
        process.exit(1);
}